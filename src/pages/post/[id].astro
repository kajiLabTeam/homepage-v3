---
import CardLayout from '@/layouts/CardLayout.astro';
import Layout from '@/layouts/Layout.astro';
import { getPosts, getThumbnail } from '@/utils/content';
import { render } from 'astro:content';
import mdStyle from '@/styles/md-style.scss?raw';
import Thumbnail from '@/components/Thumbnail/index.astro';

export async function getStaticPaths() {
  const posts = await getPosts();

  return posts.map((post) => ({
    params: { id: post.data.number },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await render(post);
---

<Layout class="main" title={post.data.title}>
  <CardLayout class="card" title={post.data.title} createdAt={post.data.createdAtStr}>
    <Thumbnail src={getThumbnail(post)} alt={post.data.title} width={480} height={270} />

    <article data-page="post">
      <Content />
    </article>
  </CardLayout>
</Layout>

<style is:global set:html={mdStyle}></style>

<style lang="scss">
  .main {
    .card {
      padding: 15px 15px 30px;
      margin-inline: auto;
      max-width: 900px;

      & :global(.title) {
        font-size: 2rem;
      }
    }
  }
</style>
