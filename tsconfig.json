{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "node_modules/tsparticles/types"],
  "exclude": ["dist"],
  "compilerOptions": {
    "types": ["tsparticles"],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"]
    }
  }
}
